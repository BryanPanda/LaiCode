package firstOccurence;

// Given a target integer T and an integer array A sorted in ascending order, 
// find the index of the first occurrence of T in A or return -1 if there is no such index.

public class FirstOccurence {

	public int firstOccur(int[] array, int target) {
		if (array == null || array.length == 0) {
			return -1;
		}
		int left = 0, right = array.length - 1;
		while (left < right - 1) {
			int mid = left + (right - left) / 2;
			if (array[mid] >= target) {
				left = mid;
			} else {
				right = mid;
			}
			// Notice: in binary search, we have mid +/- 1, so left and right are approaching in each
			// of the iterations; but here, left and right might not be, thus the change in while condition
			// and post-processing below.
		}
	}
	
}
